<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CovidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="SymptompText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/symptomp_text</item>
        <item name="android:textSize">@dimen/text_symptomp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="HeaderText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/header_text_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/header_text_margin_end</item>
        <item name="android:elevation">@dimen/header_text_elevation</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">@dimen/header_size</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="MenuImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/menu_margin</item>
        <item name="android:elevation">@dimen/menu_elevation</item>
        <item name="android:src">@drawable/ic_menu</item>
    </style>

    <style name="SymptompImage">
        <item name="android:layout_width">@dimen/image_symptomp_width</item>
        <item name="android:layout_height">@dimen/image_symptomp_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="VirusImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_virus_height</item>
        <item name="android:elevation">@dimen/image_virus_elevation</item>
        <item name="android:scaleX">1.1</item>
        <item name="android:scaleY">1.1</item>
        <item name="android:src">@drawable/image_virus</item>
    </style>

    <style name="ArcView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:elevation">@dimen/header_elevation</item>
        <item name="shape_arc_height">@dimen/header_arc_height</item>
        <item name="shape_arc_position">bottom</item>
    </style>
</resources>