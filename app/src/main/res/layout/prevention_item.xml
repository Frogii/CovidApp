<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewPrevention"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:elevation="@dimen/image_prevention_elevation"
        android:adjustViewBounds="true"
        android:src="@drawable/image_wear_mask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cardViewPrevention"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPrevention"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_prevention_height"
        android:layout_margin="@dimen/card_prevention_margin"
        app:cardCornerRadius="@dimen/card_prevention_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/card_prevention_guide_begin" />

            <TextView
                android:id="@+id/textViewPreventionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_prevention_type_margin_start"
                android:layout_marginTop="@dimen/card_prevention_type_margin_top"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/wear_face_mask"
                android:textColor="@color/black"
                android:textSize="@dimen/card_prevention_type"
                app:layout_constraintStart_toStartOf="@+id/guidelineCard"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewPreventionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_prevention_text_margin_start"
                android:layout_marginEnd="@dimen/card_prevention_text_margin_end"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/wear_mask_text"
                android:textSize="@dimen/card_prevention_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineCard"
                app:layout_constraintTop_toBottomOf="@+id/textViewPreventionType" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>