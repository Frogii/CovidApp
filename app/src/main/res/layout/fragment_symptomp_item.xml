<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="90"
    tools:context=".ui.SymptompItemFragment">

    <FrameLayout
        android:id="@+id/symptomp_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="2dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="@dimen/card_symptomp_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/imageViewPagerSymptomp"
                    style="@style/SymptompImage"
                    android:src="@drawable/image_headache"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/texViewPagerSymptomp"
                    style="@style/SymptompText"
                    android:text="@string/headache" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</LinearLayout>