<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/spinner_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewDropdownSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spinner_dropdown_text_margin_start"
        android:layout_marginTop="@dimen/spinner_dropdown_text_margin_top"
        android:layout_marginBottom="@dimen/spinner_dropdown_text_margin_bottom"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/country"
        android:textColor="@color/spinner_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>